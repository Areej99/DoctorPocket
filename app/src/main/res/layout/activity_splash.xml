<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@color/purple"
    >

    <ImageView
        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />


    <ImageView
        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233"
        android:id="@+id/photo2"
        />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448"
        android:id="@+id/photo3"
        />


    <ImageView
        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448"
        android:id="@+id/photo4"
        />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678"
        android:id="@+id/photo5"
        />

    <ImageView

        android:layout_width="108dp"
        android:layout_height="84dp"
        android:src="@drawable/layer4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678"
        android:id="@+id/photo6"
        />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="605dp"
        android:layout_height="574dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/mylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo2"
        app:layout_constraintBottom_toTopOf="@+id/photo6"
        tools:ignore="MissingConstraints" />




    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:progressTint="@color/White"
        android:progress="50"
        android:secondaryProgressTint="@color/colorPrimary"
        android:indeterminateDuration="3000"
        android:secondaryProgress="70"
        android:indeterminate="true"
        android:progressBackgroundTint="@color/darkblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="400dp"

        />


</android.support.constraint.ConstraintLayout>